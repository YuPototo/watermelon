{
    "name": "watermelon",
    "version": "1.0.0",
    "main": "src/index.ts",
    "author": "Yu Qin <sirius.qinyu@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "start": "ENV_FILE=./config/.env.prod -e ./prisma/.env.db.prod -- node -r tsconfig-paths/register ./out/index.js",
        "dev": "ENV_FILE=./config/.env.dev dotenv -e ./prisma/.env.db.dev tsnd -r tsconfig-paths/register --respawn --transpile-only ./src/index.ts",
        "test:migrate": "dotenv -e ./prisma/.db.env.test prisma migrate dev --name init",
        "test:up": "docker-compose -f docker-compose.dev.yml -p test_postgres_db up -d",
        "test:down": "docker-compose -f docker-compose.dev.yml -p test_postgres_db down",
        "test": "ENV_FILE=./config/.env.test dotenv -e ./prisma/.db.env.test jest --runInBand",
        "lint": "eslint"
    },
    "dependencies": {
        "@prisma/client": "^3.8.1",
        "bcrypt": "^5.0.1",
        "dotenv-cli": "^4.1.1",
        "dotenv-extended": "^2.9.0",
        "dotenv-parse-variables": "^2.0.0",
        "express": "^4.17.2",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "morgan-body": "^2.6.6",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.5",
        "validator": "^13.7.0",
        "winston": "^3.4.0",
        "winston-daily-rotate-file": "^4.6.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^6.0.0-alpha.3",
        "@types/bcrypt": "^5.0.0",
        "@types/dotenv-parse-variables": "^2.0.1",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/lodash": "^4.14.178",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.10",
        "@types/supertest": "^2.0.11",
        "@types/validator": "^13.7.1",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "jest": "^27.4.7",
        "prettier": "2.5.1",
        "prisma": "^3.8.1",
        "supertest": "^6.2.2",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8"
    }
}
